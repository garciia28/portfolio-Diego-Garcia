---
import Layout from '../layouts/Layout.astro';
import Badge from "../components/Badge.astro"
import LinkedInIcon from '../icons/LinkedIn.astro';
import Social from '../components/icons/Social.astro';
import GitHubIcon from '../icons/GitHub.astro';
import MailIcon from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import BriefCase from '../icons/BriefCase.astro';
import CodeIcon from '../icons/Code.astro';
import Proyects from '../components/Proyects.astro';
import AboutMe from '../components/AboutMe.astro';
import Contact from '../components/Contact.astro';
import Form from '../icons/Form.astro';
import ProfileCheck from '../icons/ProfileCheck.astro';

---

<Layout title="Portfolio de Diego - Desarrollador y Programador Multiplataforma con 2 años de Experiencia." description = "Contrata a Diego para crear tu aplicación web o móvil. Desarrollador Web y Técnico Informático. ">
	<main class="px-4">	
		<SectionContainer class = "py-44 pb-32">
			<h1  class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">¡Hola! Soy Diego García <a href="https://www.linkedin.com/in/diego-garcia-luque" target="_blank" rel="noopener"  class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></h1></a>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]"><span>+2 años de experiencia.</span> <span class="text-yellow-200/90 opacity-80">Desarrollador Web y Técnico Informático.</span> <span class="text-red-200/90"> De Madrid, España.</span> <span class="opacity-85">Especializado en aplicaciones móviles y web.</h2></span>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<Social href="https://www.linkedin.com/in/diego-garcia-luque">
					<LinkedInIcon class="size-4 md:size-6"/>LinkedIn
				</Social>
				<Social href="https://github.com/garciia28">
					<GitHubIcon class="size-4 md:size-6"/>GitHub
				</Social>
				<Social href="mailto:garciiadiego18@gmail.com">
					<MailIcon class="size-4 md:size-6"/>garciiadiego18@gmail.com
				</Social>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class = "size-7"/>
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class = "size-7"/>
				Proyectos
			</h2>
			<Proyects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProfileCheck class = "size-7"/>
				Sobre mí
			</h2>
			<AboutMe />
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Form class = "size-7"/>
				Formulario de Contacto
			</h2>
			<Contact />
	</main>
</Layout>

